<h1>GuestBook</h1><br>

<% if user_signed_in? %>
  <%= link_to "新增留言", new_mboard_path %><br>
<% end %>

<% @posts.each do |post| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= post.name %>
        <%= post.created_at.strftime("%F %T") %>
      </h3>
    </div>
    <div class="panel-body">
      <%= post.post %><br>
      <i class="fa fa-reply" aria-hidden="true"><%= link_to "回覆", 'javascript:;',class: "display-comment" %></i>
      <div class="mboard-comment">
        <%= render partial: 'comments/mboard_comment', locals: {comment: post.comments.build}  %>
      </div>
    </div>
    <% post.reload %>
    <% if post.comments.any? %>
      <% post.comments.each do |comment| %>
        <div class="media well">
          <div class="media-left">
            <%= image_tag comment.user.image %>
          </div>
          <div class="media-body">
            <span><%= comment.comment %></span>
          </div>
        </div>
      <% end %>
    <% end %>
      
    </ul>

  </div>
  
  
<% end %>
