<h1>GuestBook</h1><br>

<% if user_signed_in? %>
  <%= link_to "新增留言", new_mboard_path %><br>
<% end %>

<% @posts.each do |post| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= post.name %>
        <%= post.created_at.strftime("%F %T") %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="comment-body viewer">
        <%= post.post %>
        <% if user_signed_in? %>
          <i class="fa fa-reply" aria-hidden="true"><%= link_to "回覆", 'javascript:;',class: "display-comment" %></i><br>
          <div class="mboard-comment">
            <%= render partial: 'comments/mboard_comment', locals: {post_id: post.id} %>
          </div>
        <% end %>
        <% if post.name == current_user.name%>
          <%= button_tag 'Edit', class: 'edit-comment-form', type: :button %>
        <% end %>
      </div>
      


      <% if post.name == current_user.name%>

        <div class="mboard-edit editor" %>
          <%= render partial: 'edited_comment', locals: {post: post} %>
          <%= button_tag 'Cancel', class: 'cancel-mcomment', type: :button %>
        </div>
        <%= link_to "刪除", mboard_path(post), method: :delete, data: {confirm: "確定刪除?"} %>
      <% end %>

    </div>

   
    
    <% if post.comments.any? %>
      <% post.comments.each do |comment| %>
        <div class="media well">
          <div class="media-left">
            <%= image_tag comment.user.image %>
          </div>
          <div class="media-body">
            <span><%= comment.comment %></span>
          </div>
        </div>
      <% end %>
    <% end %>
      
    </ul>

  </div>
  
  
<% end %>
