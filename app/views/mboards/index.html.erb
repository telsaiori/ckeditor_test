<h1>GuestBook</h1><br>

<% if user_signed_in? %>
  <%= link_to "新增留言", new_mboard_path %><br>
<% end %>

<% @posts.each do |post| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        <%= post.name %>
        <%= post.created_at.strftime("%F %T") %>
      </h3>
    </div>
    <div class="panel-body">
      <%= post.post %><br>
      <i class="fa fa-reply" aria-hidden="true"><%= link_to "回覆" %></i>
    </div>
  </div>
  
  
<% end %>
