<p>
  <h1><%= @post.title %></h1>
</p>
<hr>

<p><span class="glyphicon glyphicon-time"></span>發表於 <%= @post.created_at.to_s(:long) %></p>
<p>分類: <%= @post.category.name %></p>
<p>
  <%= raw @post.content %>
</p>

<% if is_admin?(current_user) %>
  <%= link_to 'Edit', edit_admin_post_path(@post) %> |
  <%= link_to 'Back', admin_posts_path %>
<% end %>

