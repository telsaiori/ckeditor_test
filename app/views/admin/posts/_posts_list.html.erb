<div class="table-responsive">
  <table class="table">
    <thead>
      <th>選取</th>
      <th>日期</th>
      <th>標題</th>
      <th>分類</th>
    </thead>
    <tbody> 
      <% @posts.each do |post| %>
        <tr>
          <td>#</td>
          <td><%= post.created_at.strftime("%Y/%m/%d") %></td>
          <td><%= link_to post.title, post_path(post), target: '_blank' %></td>
          <td><%= post.category.name %></td>
          <td><%= link_to "編輯", edit_admin_post_path(post), class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to "刪除", admin_post_path(post), method: :delete, class: 'btn btn-danger btn-xs' %></td>
        <tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @posts %>