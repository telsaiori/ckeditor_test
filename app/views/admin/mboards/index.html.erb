<h1>留言板管理</h1>

<%= form_tag multi_del_admin_mboards_path, method: :delete do %>
  <div class="table-responsive"> 
    <table class="table">
      <thead>
        <th>選取</th>
        <th>日期</th>
        <th>留言者</th>
        <th>內容</th>
      </thead>
      <tbody> 
        <% @admin_mboards.each do |mboard| %>
          <tr>
            <td><%= check_box_tag "del_mboards[]", mboard.id %></td>
            <td><%= mboard.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= mboard.name %></td>
            <td><%= sanitize(markdown(mboard.post)) %></td>
            <td><%= link_to "刪除", admin_mboard_path(mboard), method: :delete, class: 'btn btn-danger btn-xs' %></td>
          <tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= submit_tag "刪除所選文章", data: { confirm: '確定刪除?' }, class: 'btn btn-danger' %>
<% end %>
<%= paginate @admin_mboards %>

<%= link_to '新增留言', new_admin_mboard_path %>
