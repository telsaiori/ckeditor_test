<%= form_for @comment, url: { controller: 'mboards', action: 'add_comment'} do |f| %>
  <div class="panel panel-default">
    <div class="form-group panel-heading ">
      <%= f.label :name, value: current_user.name %>
      <%= f.hidden_field :name, value: current_user.name %>
    </div>

    <div class="form-group panel-body">
      <%= f.text_area :comment, placeHolder: '留個言吧..', rows: '3', cols: '100', required: true %>
      <%= hidden_field_tag "comment[post_id]", "#{post_id}" %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>

    <%= f.submit '送出', class: 'btn btn-primary' %>
    <div class="btn btn-warning comment-cancel">取消</div>
  </div>
<% end %>