<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Telsa's Blog", root_path, class: "navbar-brand" %>
        <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#navbar-list">
          <span class="sr-only">toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse navbar-right" id="navbar-list">
        <ul class="nav navbar-nav">
          
          <% if is_admin?(current_user) %>
            <li><%= link_to '新增遊戲', new_game_path %></li>
            <li><%= link_to '新增文章', new_post_path %></li>
            <li><%= link_to '新增分類', new_category_path %></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">     <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "管理後台", admin_posts_path %></li>
                <li><%= link_to '登出' + "#{current_user.name} ", destroy_user_session_path, method: :delete %></li>
              </ul>
          <% else %>
            <li><%= link_to '登入', new_user_session_path %></li>
            <li><%=link_to '使用FACEBOOK登入', user_facebook_omniauth_authorize_path %></li>
          <% end %>
        </ul>
      </div>

      <div class="navbar-left navbar-form" role="search">
        <div class="form-group">
          <%= form_tag posts_path, method: 'get' do %>
            <%= text_field_tag :search,"", class: "form-control", placeholder: "文章搜尋" %>
            <%= submit_tag :search, class: "btn btn-default" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  
  <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
          <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
              <li>
                  <a href="#"><span class="fa-stack fa-lg pull-left"><i class="fa fa-caret-down fa-stack-1x "></i></span> 文章分類</a>
                     <ul class="nav-pills nav-stacked" style="list-style-type:none;">
                        <% Category.all.map{|p| p.name}.each do |name| %>
                        <% category_id = Category.find_by(name: name).id %>
                          <li><%=link_to name+"(#{Post.where(category_id: category_id).count})", category_post_path(category: name) %></li>
                        <% end %>
                  </ul>
              </li>

              <li>
                  <a href="#"><span class="fa-stack fa-lg pull-left"><i class="fa fa-calendar fa-stack-1x "></i></span>Calendar</a>
                  <%= render partial: '/calendar' %>
              </li>
              <li>
                  <%= link_to games_path do%>
                    遊戲reviews
                    <span class="fa-stack fa-lg pull-left">
                    <i class="fa fa-gamepad fa-stack-1x "></i>
                  <% end %>
              </li>
              <li>
                  <%= link_to mboards_path do %>
                    留言板
                    <span class="fa-stack fa-lg pull-left">
                    <i class="fa fa-commenting fa-stack-1x"></i>
                  <% end %>
              </li>
              <li>
                <%= link_to about_path do %>
                About
                <span class="fa-stack fa-lg pull-left">
                <i class="fa fa-info fa-stack-1x "></i>
                <% end %>
              </li>
          </ul>
      </div><!-- /#sidebar-wrapper -->
      <!-- Page Content -->
      <div id="page-content-wrapper">
          <div class="container-fluid xyz">
              <div class="row">
                  <div class="col-sm-12">
                    <% flash.each do |key, value| %>
                      <% key = "success" if key == "notice" %> 
                      <% key = "danger" if key == "alert" %> 
                      <div class="alert alert-<%= key %>">
                        <%= value %>
                      </div>
                    <% end %>
                    <%= yield %>
                    <%= debug(params) if Rails.env.development? %>
                  </div>
              </div>
          </div>
      </div>
      <!-- /#page-content-wrapper -->
  </div>

</body>
</html>
