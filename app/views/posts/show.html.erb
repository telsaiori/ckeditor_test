<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw @post.content %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
<br />
<br />
<p>留言列表(<%= @post.comments.count %>)</p>
<div class="comment-list panel panel-info">
  <% @post.comments.each do |comment| %>
    <p class="panel-heading"><%= comment.name %></p>
    <p class="panel-body"><%= comment.comment %></p>
  <% end %>
</div>

<div class="comment-area col-sm-6">
  <%= render partial: '/comments/comment_form', objects: @comment %>
</div>

