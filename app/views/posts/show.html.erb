<p>
  <h1><%= @post.title %></h1>
</p>


<p><span class="glyphicon glyphicon-time"></span>Posted on <%= @post.created_at.to_s(:db) %></p>
<p>分類: <%= @post.category.name %></p>
<hr>
<p>
  <%= raw @post.content %>
</p>

<% if is_admin?(current_user) %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
<br />
<br />
<p>留言列表(<%= @post.comments.count %>)</p>
<%= render partial: 'comments/comments_list', objects: @post %>

<% if user_signed_in? %>
  <div class="comment-area col-sm-6">
    <%= render partial: '/comments/comment_form', objects: @comment %>
  </div>
<% end %>
