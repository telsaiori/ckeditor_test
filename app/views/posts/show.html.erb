<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw @post.content %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
<br />
<br />
<p>留言列表(<%= @post.comments.count %>)</p>
<%= render partial: 'comments/comments_list', objects: @post %>


<div class="comment-area col-sm-6">
  <%= render partial: '/comments/comment_form', objects: @comment %>
</div>

