<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw @post.content %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>
<br />
<br />

<div class="comment-area col-sm-6">
  <%= render partial: '/comments/comment_form', objects: @comment %>
</div>

